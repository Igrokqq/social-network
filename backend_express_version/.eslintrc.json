{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": ["error", "single"],
        "import/prefer-default-export": 0,
        "import/no-unresolved": 0,
        "import/extensions": 0,
        "func-names": "off",
        "max-len": ["error", 150],
        "no-unused-vars": "error",
        "class-methods-use-this": 1,
        "no-fallthrough": 1,
        "no-underscore-dangle": 1,
        "@typescript-eslint/no-unused-vars": [ 2, { "args": "none" } ]
    }
}
